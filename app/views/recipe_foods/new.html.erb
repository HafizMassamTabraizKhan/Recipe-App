<h1 class="text-center">Add Ingredient to Recipe</h1>

<%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe),  local: true, remote: true) do |form| %>
  <div class="form-group mt-4">
  <%= form.hidden_field :recipe_id, value: @recipe.id %>
    <%= form.label :food_id, 'Select Food' %>
    <%= form.collection_select :food_id, @foods, :id, :name, { prompt: '.. Select a Food ..' }, { id: 'food-select', class: 'form-control' } %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Ingredient', class: "btn btn-primary mt-3 mb-2" %>
  </div>
<% end %>

<%= link_to 'Back to Recipe', recipe_path(@recipe) %>
