

<h1>Add Ingredient to Recipe</h1>

<%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe),  local: true, remote: true) do |form| %>
  <div class="field">
  <%= form.hidden_field :recipe_id, value: @recipe.id %>
    <%= form.label :food_id, 'Select Food' %>
    <%= form.collection_select :food_id, @foods, :id, :name, { prompt: '.. Select a Food ..' }, id: 'food-select'%>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Ingredient' %>
  </div>
<% end %>

<%= link_to 'Back to Recipe', recipe_path(@recipe) %>
