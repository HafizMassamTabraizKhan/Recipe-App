<h1>Edit Ingredient</h1>

<%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_food_path(@recipe, @recipe_food), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :food_id, 'Select Food' %>
    <%= form.collection_select(:food_id, @foods, :id, :name, prompt: 'Select a food') %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Ingredient' %>
  </div>
<% end %>

<%= link_to 'Back to Recipe', recipe_path(@recipe) %>
