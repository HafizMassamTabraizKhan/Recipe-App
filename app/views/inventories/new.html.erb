
<div class="container mt-5">

    <h3 class="text-center text-primary-emphasis"">Add the Information of your food below</h3>
    <div class="row mt-2">
        <div class="col-6 offset-3">
            <%= form_with(model: @inventory, local: true, class: 'form') do |form| %>
                <div class="form-group">
                    <%= form.label :name %>
                    <%= form.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group mt-3">
                    <%= form.label :description %>
                    <%= form.text_area :description, class: 'form-control', rows: 4, cols: 50 %>
                </div>
                <%= form.submit "Add Inventory", class: "bg-dark bg-gradient text-info border border-0 mb-3 p-2 border-none mt-3" %>
            <% end %>
        </div>
    </div>
</div>