<h3 class="text-center">Add New Inventory</h3>
<%= form_with(model: @inventory, local: true, class: 'form') do |form| %>
    <div class="form-group mt-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control', rows: 4, cols: 50 %>
    </div>
    <%= form.submit "Add Inventory", class: "btn btn-primary mt-3" %>
<% end %>