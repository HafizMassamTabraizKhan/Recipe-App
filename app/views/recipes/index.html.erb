<h1 class="recipe-page-title">My Recipes</h1>
<div class="wrapper">
  <% @recipes.each do |recipe| %>
  <div class="title-actions">
     <%= link_to recipe.name, recipe, class: "recipe-name-link" %>
    <% if current_user == recipe.user %>
        <%= link_to "REMOVE", recipe, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %>
      <% end %>
  </div>
  <div class="description">
    <p> <%= recipe.description %>
  </div>
  <% end %>

</div>
